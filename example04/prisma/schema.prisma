generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RouterData {
  id String @id @map("router_id")

  routerType RouterTypeData

  networkSwitch SwitchData[]
}


model SwitchData {
  id String @id @map("switch_id")

  switchType SwitchTypeData 

  router RouterData @relation(fields: [routerId], references: [id])
  routerId String

  
  networks NetworkData[]


  ipAddress String @unique
  ip IPData @relation(fields: [ipAddress], references: [address])

  @@map(name: "switch")
}


model NetworkData {
  id Int @id @map("network_id")

  switch SwitchData @relation(fields: [switchId], references: [id])
  switchId String

  ipAddress String @unique
  ip IPData @relation(fields: [ipAddress], references: [address])

  name String

  cidr Int

  @@map(name: "network")
}

model IPData {
  address String @unique
  protocol ProtocolData

  network NetworkData? 
  switch SwitchData?

  @@map(name: "ip")
}


enum ProtocolData {
  IPV4
  IPV6
  @@map(name: "protocol")
}

enum RouterTypeData {
  EDGE
  CORE

  @@map(name: "router_type")
}

enum SwitchTypeData {
  LAYER2
  LAYER3

  @@map(name: "switch_type")
}



